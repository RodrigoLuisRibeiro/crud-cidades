package com.edu.utfpr.cp.espjava.crudcidades.visao;

import javax.validation.constraints.*;
//import javax.validation.constraints.Size;

public final class Cidade {
    private final String nome;
    private final String estado;

    public Cidade(final String nome, final String estado) {
    	
    	@NotBlank(message = "Nome da cidade deve ser informado")
    	@Size(min = 4, max = 60, message = "O nome da cidade deve ter entre 4 e 60 caracteres")
        this.nome = nome;
    	
    	@NotBlank(message = "Sigla do estado deve ser informado")
    	@Size(message = "A sigla do estado est√° limitado a 2 caracteres")
        this.estado = estado;
    }

    public String getNome() {
        return nome;
    }

    public String getEstado() {
        return estado;
    }
}

